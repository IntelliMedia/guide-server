extends layout

block content
  h1 Monitor

  div
     h3 Active Sessions  
     table.table.table-striped
      thead
        tr
          th Session ID
          th Student ID
          th Start Time
          th Total Events
      tbody
        for session in activeSessions
          tr
            td 
              a(href='/session/#{session.id}') #{session.id}          
            td #{session.studentId}
            td #{new Date(session.startTime)}
            td #{session.events.length}

  div
     h3 Inactive Sessions  
     table.table.table-striped
      thead
        tr
          th Session ID
          th Student ID
          th Start Time
          th Total Events
      tbody
        for session in inactiveSessions
          tr
            td 
              a(href='/session/#{session.id}') #{session.id}          
            td #{session.studentId}
            td #{new Date(session.startTime)}
            td #{session.events.length}