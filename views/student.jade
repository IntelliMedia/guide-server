extends layout

block content
  h1 Student 
  h3 #{student.id}

  div#container(style="min-width: 500px; height: 500px; margin: 0 auto")
    script.
      $(function () { 
          var myChart = Highcharts.chart('container', {
              chart: {
                  type: 'bar'
              },
              title: {
                  text: 'Fruit Consumption'
              },
              xAxis: {
                  categories: ['Apples', 'Bananas', 'Oranges']
              },
              yAxis: {
                  title: {
                      text: 'Fruit eaten'
                  }
              },
              series: [{
                  name: 'Jane',
                  data: [1, 0, 4]
              }, {
                  name: 'John',
                  data: [5, 7, 3]
              }]
          });
      });